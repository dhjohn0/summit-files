{{#extend "layout"}}

{{#replace "body"}}

  <div class="container">
    <div class="files-browser">
      <div class="row">
        <div class="col-xs-12">

          <form id="newFileForm" enctype="multipart/form-data" method="POST" action="/file/{{folder}}">
            <input type="hidden" name="redirect" value="/folder/{{folder}}?includeParent=true" />
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-12">
                    <h4 class="modal-title">Upload File</h4>
                  </div>
                </div>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-xs-12">
                    
                    <input type="file" class="form-control" name="file" />

                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <input type="submit" class="btn btn-primary" value="Create" />
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>

{{/replace}}

{{/extend}}